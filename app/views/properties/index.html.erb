<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><p><%= property.price %>円</p></td>
        <td><%= property.address %></td>
        <td><p><%= property.age %>年</p></td>
        <td><%= property.notes %></td>
        <td><%= link_to '詳細', property_path(property.id) %></td>
        <td><%= link_to '編集', edit_property_path(property.id) %></td>
        <td><%= link_to '削除', property_path(property.id), method: :delete, data: { confirm: '削除してよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '物件を登録する', new_property_path %>
